rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC COLLECTIONS
    // Necessary for the dashboard to load trainers and plans before login or just after
    match /entrenadores/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Temporary for seeding
    }
    match /planes/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Temporary for seeding
    }
    match /sesiones/{sessionId} {
      allow read: if request.auth != null;
    }

    // USER DATA
    // Only the user can read/write their own profile
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // RESERVATIONS
    // User can write if they are authenticated
    // User can read if they own the reservation
    match /reservas/{reservaId} {
      // Allow create if auth exists and uid matches (robust check)
      allow create: if request.auth != null && request.resource.data.uid_usuario == request.auth.uid;
      
      // Allow read/update/delete if auth exists and user owns the doc
      allow read, update, delete: if request.auth != null && resource.data.uid_usuario == request.auth.uid;
    }
  }
}